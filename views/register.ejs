    <div class="container">
        <h1 class="register">Register</h1>
        <form action ="/register" method="POST">
            <div>
                <input class="tfield" type="text" id="name" name="name" placeholder="Name" required><br><br>
            </div>
            <div >
                <input class="tfield" type="email" id="email" name="email" placeholder="Email" required> <br><br>
            </div>
            <div >
                <input class="tfield" type="password" id="password" name="password" placeholder="Password" required><br><br>
            </div>
            <button class="btn" type="submit">REGISTER</button><br><br><br>
            
            <label class="remcheck"> <input type="checkbox" checked="checked">Remember Me </label><br><br>
            <label class="member">Already A Member? <a href="/login">SIGN IN</a></label>
        </form>
    </div>
</body>
